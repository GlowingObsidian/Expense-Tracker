generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense{
  id Int @id @default(autoincrement())
  amount Float @default(0.0)
  date DateTime @default(now())
  title String
  category Category?
}

enum Category{
  RENT
  UTILITIES
  MAINTAINENCE
  TRANSPORT
  GROCERIES
  HEALTH
  SHOPPING
  FOOD
  ENTERTAINMENT
  MISCELLANEOUS
}
